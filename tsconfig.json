{
  "compilerOptions": {
    /* Basic Options */
    "target": "ESNEXT",
    "module": "NodeNext",
    "lib": ["ES5", "ES6", "DOM"],
    "types": ["jest", "node"],
    "sourceMap": true,
    "outDir": "./build",
    "rootDir": ".",
    "isolatedModules": true,
    "strict": true,
    "noImplicitAny": true, 
    "strictNullChecks": true,
    "strictPropertyInitialization": false, 
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "NodeNext",
    "esModuleInterop": true, 
    "resolveJsonModule": true,
    "ignoreDeprecations": "6.0",
    "baseUrl": ".",
    "paths": {
      "PrismaGenerated": ["prisma/generated/lib"]
    }
  },
  
  "include": [
    "src/**/*",
    "prisma/generated/lib/**/*"
, "src/seed.ts"  ],
  "exclude":[
    "**/*.test.ts",
  ]
  
}